<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.riezki.latihan.moviecatalogdb.ui.main.MovieFragment"
        android:label="MovieFragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_movieFragment_to_detailActivity"
            app:destination="@id/detailActivity"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_movieFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
    </fragment>
    <activity
        android:id="@+id/detailActivity"
        android:name="com.riezki.latihan.moviecatalogdb.ui.detail.DetailActivity"
        android:label="DetailActivity"
        tools:layout="@layout/activity_detail" >
        <argument
            android:name="movieArgs"
            app:argType="com.riezki.latihan.moviecatalogdb.core.domain.model.Movies" />
    </activity>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.riezki.latihan.moviecatalogdb.ui.favorite.FavoriteFragment"
        android:label="FavoriteFragment" >
        <action
            android:id="@+id/action_favoriteFragment_to_detailActivity"
            app:destination="@id/detailActivity" />
    </fragment>
</navigation>